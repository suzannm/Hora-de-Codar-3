programa {
  funcao inicio() {
    real numeroInicial=15, numeroFinal=100, soma=0, divisao
    real i=15, numeros=0
    enquanto (i>=15 e i<=100){
      soma = i + soma
      i = i + 1
      numeros = numeros + 1
    }

    divisao = soma / numeros
    escreva("O resultado da média aritmética dos números entre 15 e 100 é: ", divisao)
  }
}
