programa {
  funcao inicio() {
    real numero1, numero2, divisao

    escreva("Digite o primeiro número: ")
    leia(numero1)

    escreva("Digite o segundo número: ")
    leia(numero2)
    enquanto(numero2 <= 0){
      escreva("Digite um valor maior que 0: ")
      leia(numero2)
    }
    divisao = numero1 / numero2

    escreva("O resultado é: ", divisao)
  }
}
