programa {
  funcao inicio() {
    
    real numero1, numero2, numeros=0
    real soma1, divisao, i, soma2=0, resultado



    escreva("Digite o primeiro número: ")
    leia(numero1)
    i=numero1
    escreva("Digite o segundo número: ")
    leia(numero2)

    soma1 = numero1 + numero2
    divisao = soma1 / 2

    escreva("A média aritmética é: ",divisao,". ")

    enquanto(i <= numero2) {
      soma2 += i
      numeros++
      i++
    }

    resultado = soma2 / numeros
    escreva("A média aritmética dos números entre os dois números é: ", resultado, ".")

  }
}
